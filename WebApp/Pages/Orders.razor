@page "/orders"
@inherits OrderBase

<h3 class="text-center mb-4">Orders</h3>
@if (Orders != null)
{
    <div class="d-flex flex-column justify-content-center align-items-center">
        @foreach (var order in Orders.Orders)
        {
            <div class="card card-stepper col-12 col-md-8 col-xl-6 mb-3" style="border-radius: 16px;">
                <div class="card-header p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-2"> Order ID <span class="fw-bold text-body">#@order.Id</span></p>
                            <p class="text-muted mb-0"> Place On <span class="fw-bold text-body">@order.PlacedOn.ToShortDateString() @order.PlacedOn.ToShortTimeString()</span> </p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex flex-row">
                        <div class="flex-fill">
                            <h5 class="bold text-wrap">@order.Title</h5>
                            <p class="text-muted"> Qt: 1 item</p>
                            <h5 class="mb-3"> € @order.Amount </h5>
                            <p class="text-muted">Status: <span class="text-body">@order.Status</span></p>
                        </div>
                        <div>
                            <img class="align-self-center img-fluid"
                                 src="@(!string.IsNullOrWhiteSpace(order.ImageURL) ? order.ImageURL : GetImagePath())" width="100">
                        </div>
                    </div>
                </div>
                <div class="card-footer p-3">
                    <div class="d-flex justify-content-between">
                        <p class="text-muted mb-2"> Card: <span class="fw-bold text-body">**** **** **** @order.LastCardDigits</span></p>
                        <p class="text-muted mb-0"> Expires: <span class="fw-bold text-body">@order.CardExpiration</span> </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" style="width: 50px; height: 50px;" role="status" />
    </div>
}