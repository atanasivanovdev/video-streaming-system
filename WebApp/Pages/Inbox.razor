@page "/inbox"
@inherits InboxBase

<h3 class="text-center mb-4">Inbox</h3>

@if (Inbox != null)
{
    <table class="table table-striped table-hover pb-3">
        <tbody>
            @foreach (var message in Inbox.Messages)
            {
                <tr>
                    <td><span class="oi oi-envelope-closed" aria-hidden="true"></span></td>
                    <td><span class="subject">@message.Content</span></td>
                    <td><span class="badge badge-inverse text-black">@message.CreatedAt.ToShortDateString(), @message.CreatedAt.ToShortTimeString()</span></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" style="width: 50px; height: 50px;" role="status" />
    </div>
}

